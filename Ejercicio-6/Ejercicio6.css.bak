body{
	 font: 400 1em ARIAL, sans-serif;
	color: #000000;
	background-color:#E3E4E5;
}


h1{
	
	font: 400 2em ARIAL, sans-serif;
	  text-align:center;
	  
	  background-color:#E3E4E5;
	  color: #000000;
	  text-decoration:underline;
	  
	
}

h2{
	  
	  font: 400 1.8em ARIAL, sans-serif;
