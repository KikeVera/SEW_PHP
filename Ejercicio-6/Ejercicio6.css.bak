  }

	form{
		margin: auto;
	
	 text-align:center;
	 display: grid;
    grid-template-columns: repeat(4,13em);
    align-items: center ;
    
    overflow-x: auto;
	}

label{
	
	 text-align:center;
}
 
  
  main{
	  
	  text-align:left;
	 
	
	 
  }
  input[type=text]{
	  
	  
	  
	  font: 400 1em ARIAL, sans-serif;
	  color: #000000;
	   background-color:#FFFFFF;
	   width:12em;
	   height:1em;
  }
  
  input, label {
	  display:block;
   
}
  
  
  
  input[type=submit]{
	  
	  
	 
	  font: 400 1em ARIAL, sans-serif;
	  color: #FFFFFF;
	   grid-column: span 4;
	   background-color:#626262;
	   width:8.5em;
	   height:1.5em;
	   margin-top:1em;
	   
  }
  
  input[value="Crear base"]{
	  
	  
	 
	  margin-top:3em;
	   
  }
  
 
  
  
  
  textarea{
	  overflow-y: scroll;
	  
