		</datalist>
		<input type="submit" value="Buscar" name="btBuscarPersonalizada">
	</form>
	
	<h3>Resultado de la busqueda</h3>
	<label for="resultado">Resultado:</label> 
	<textarea id="resultado"></textarea>
	
	

	

	
	</main>




